{
  "name": "ops-api",
  "version": "0.0.0",
  "module": "server.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./dist || true && rm -rf node_modules",
    "clean-build": "bun run clean && bun i && bun run build",
    "dev": "bash ./dev.sh",
    "prod-install": "rm -rf node_modules && bun i --production",
    "setup-test-lint": "bun ./scripts/setup-test-lint.js",
    "start": "bun ./dist/server.js",
    "test": "jest"
  },
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "bun-types": "^0.4.0",
    "eslint": "^8.32.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "bunrest": "^1.1.8",
    "express": "^4.18.2"
  }
}
